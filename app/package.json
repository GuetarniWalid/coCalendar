{
  "name": "coCalendar",
  "version": "1.0.0",
  "main": "index.js",
  "workspaces": {
    "packages": [
      "src/packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/react",
      "**/react/**",
      "**/@react-native/*",
      "**/@react-native/*/**",
      "**/expo",
      "**/expo/**",
      "**/@expo/*",
      "**/@expo/*/**"
    ]
  },
  "scripts": {
    "start": "npx expo run:android",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "check-all": "npm run type-check && npm run lint",
    "db:push": "supabase db push",
    "android": "npx expo run:android",
    "ios": "expo run:ios",
    "copy-rive-assets": "node scripts/copy-rive-assets.js",
    "prebuild:clean": "expo prebuild --clean && npm run copy-rive-assets"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.2",
    "@marceloterreiro/flash-calendar": "^1.3.0",
    "@project/auth-view": "*",
    "@project/calendar-view": "*",
    "@project/day-view": "*",
    "@project/profile-view": "*",
    "@project/shared": "*",
    "@project/slot-form-view": "*",
    "@project/statistics-view": "*",
    "@project/tasks-view": "*",
    "@react-navigation/native": "^7.1.17",
    "@react-navigation/native-stack": "^7.3.26",
    "@shopify/flash-list": "2.0.2",
    "@supabase/supabase-js": "^2.39.0",
    "dayjs": "^1.11.18",
    "expo": "^54.0.9",
    "expo-crypto": "~15.0.7",
    "expo-file-system": "~19.0.14",
    "expo-font": "~14.0.8",
    "expo-image": "^3.0.8",
    "expo-linking": "~8.0.8",
    "expo-notifications": "~0.32.11",
    "expo-status-bar": "~3.0.8",
    "metro": "^0.83.1",
    "moment": "^2.30.1",
    "qs": "^6.14.0",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.0",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-worklets": "0.5.1",
    "rive-react-native": "^9.6.1",
    "teaful": "^0.11.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~19.1.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-preset-expo": "~12.0.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-native": "^4.1.0",
    "supabase": "^2.39.2",
    "typescript": "~5.9.2"
  },
  "private": true
}
