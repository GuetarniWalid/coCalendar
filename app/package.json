{
  "name": "coCalendar",
  "version": "1.0.0",
  "main": "index.js",
  "workspaces": {
    "packages": [
      "src/packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/react",
      "**/react/**",
      "**/@react-native/*",
      "**/@react-native/*/**",
      "**/expo",
      "**/expo/**",
      "**/@expo/*",
      "**/@expo/*/**"
    ]
  },
  "scripts": {
    "start": "expo start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "check-all": "npm run type-check && npm run lint",
    "db:push": "supabase db push",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "copy-rive-assets": "node scripts/copy-rive-assets.js",
    "prebuild:clean": "expo prebuild --clean && npm run copy-rive-assets"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@marceloterreiro/flash-calendar": "^1.3.0",
    "@project/auth-view": "*",
    "@project/calendar-view": "*",
    "@project/day-view": "*",
    "@project/home-view": "*",
    "@project/shared": "*",
    "@project/slot-form-view": "*",
    "@react-navigation/native": "^7.1.17",
    "@react-navigation/native-stack": "^7.3.26",
    "@shopify/flash-list": "1.7.6",
    "@supabase/supabase-js": "^2.39.0",
    "dayjs": "^1.11.18",
    "expo": "~53.0.22",
    "expo-crypto": "~14.1.5",
    "expo-file-system": "~18.1.11",
    "expo-font": "~13.3.2",
    "expo-image": "^3.0.8",
    "expo-linking": "~7.1.7",
    "expo-notifications": "^0.31.4",
    "expo-status-bar": "~2.2.3",
    "metro": "^0.82.0",
    "moment": "^2.30.1",
    "qs": "^6.14.0",
    "react": "19.0.0",
    "react-native": "0.79.6",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-svg": "15.11.2",
    "rive-react-native": "^9.6.0",
    "teaful": "^0.11.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~19.0.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-native": "^4.1.0",
    "supabase": "^2.39.2",
    "typescript": "~5.8.3"
  },
  "private": true
}
